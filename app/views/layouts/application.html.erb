<!DOCTYPE html>
<html>
<head>
  <title>Acebook</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= favicon_link_tag 'JusticeMoo.png' %>
</head>

<body>
  <h1><%= link_to "ⒶⒸⒺⒷᴼᴼⓀ", root_path %></h1>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div> <% if user_signed_in? %>
    <p> Currently logged in as <%= current_user.user_name %> <br>
      <a href="<%= destroy_user_session_path%>" data-method="delete"> Sign out
      </a>
    </p>
    <% else %>
    <br>
    <a href="<%= new_user_session_path%>"> Sign in
    </a><br>
    <a href="<%=  new_registration_path(User) %>">Sign up</a>
    <% end %>
  </div>
  <%= yield %>
</body>
</html>
