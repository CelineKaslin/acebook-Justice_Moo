<%= link_to "New post", new_post_path %>
<div>
  <div>
    <% @posts.reverse.each do |post| %>
    <p> <%= post.message %> </p>
    <p> <%= post.user_id %> </p>
    <p> - created by <%= @users.find(post.user_id).email %> </p>
    - at <%= post.time_created %>
    <div>
      <% if post.comments.each do | comment | %>
      <p>
        " <%= comment.content %> "
        | <%= comment.user.email %><br>
      </p>
      <% end %>
    </div>
  </div>

  <% if current_user.id == post.user_id %>
  <%= link_to "Edit Post", edit_post_path(post) %>
  <%= link_to "Delete Post", post, method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
  <%= form_for [post, post.comments.new] do |form| %>
  <%= form.text_field :content, placeholder: 'Add a comment...' %>
  <%= form.submit "Submit" %>

  <% end %>
  <% end %>
</div>

<% end %>
